/* 轮播图 */
page {
    position: relative;
    background-color: #F5F5F5;
}

.banners {
    width: 100%;
    height: 600rpx;
}

.banners image {
    width: 100%;
    height: 100%;
}

/* -----------order----------- */
.order {
    position: absolute;
    top: 550rpx;
    width: calc(100vw - 80rpx);
    height: 400rpx;
    margin-left: 40rpx;
    background-color: #FBFBFB;
    border-radius: 20rpx;
    box-shadow: 0px 0px 5px rgba(100, 100, 100, .5);
}

.mnane {
    padding-top: 30rpx;
    padding-bottom: 10rpx;
    font-size: 50rpx;
    text-align: center;
    border-bottom: 1rpx solid #BB8888;
    width: 500rpx;
    margin-left: calc((100vw - 580rpx)/2);

}

.caozuo {
    display: flex;
}

.caozuo .iconfont {
    font-size: 140rpx;
    margin-bottom: 40rpx;
}

.ziqu,
.yuding {
    flex: 1;
    display: flex;
    align-items: center;
    justify-content: center;
    flex-direction: column;
    margin-top: 30rpx;
}

.yuding {
    border-left: 1rpx solid #BB8888;
}

/* ------------------info----------- */
.info {
    display: flex;
    width: calc(100vw - 80rpx);
    margin-left: 40rpx;
    position: absolute;
    top: 1000rpx;
}

.address,
.call,
.orderDetail {
    flex: 1;
    height: 250rpx;
    box-shadow: 0px 0px 5px rgba(100, 100, 100, .5);
    border-radius: 20rpx;
    display: flex;
    align-items: center;
    justify-content: center;
    flex-direction: column;
    background-color: #FBFBFB;
}

.call,
.orderDetail {
    margin-left: 20rpx;
}

button ::after {
    border: none;
}

.call button {
    background-color: #FBFBFB;
    /*  position: relative; */
    /* height: 160rpx; */

}




.info .iconfont {
    font-size: 90rpx;
    padding-top: 20rpx;
}



span {
    color: #000000;
}

.iconfont {
    color: #BB8888;
}