    width: 100rpx;
    height: 50rpx;
    flex-grow: 1;
    margin-left: 20rpx;
    margin-right: 30rpx;
    text-align: center;
    background-color: white;
    border-radius: 20rpx;
    font-size: 25rpx;
    line-height: 50rpx;
}

