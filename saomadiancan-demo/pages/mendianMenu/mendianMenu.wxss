.leftContent {
    width: 180rpx;
    /* background-color: #f0f0f0; */
    height: calc(100vh - 250rpx);
    border-right: 1rpx solid #f0f0f0;
}

.left-menu {
    height: calc(100vh - 250rpx);
    width: 180rpx;
    display: flex;
    flex-direction: column;
    position: relative;
}

.menu-item {
    display: flex;
    justify-content: center;
    height: 88rpx;
    line-height: 88rpx;
    width: 180rpx;
    border-bottom: 1rpx solid #f0f0f0;

}

.menu-active {
    background-color: #BB8888 !important;
}

.menu-item-kongbai {
    height: 180rpx;
    display: inline-block;
    text-align: center;
    line-height: 88rpx;
    width: 180rpx;
}

.left-menu :first-child {
    background-color: white;
}

.rightContent {
    width: calc(100vw - 180rpx);
    height: calc(100vh - 250rpx);
}

.right_menu {
    padding-left: 20rpx;
    width: calc(100vw - 180rpx);
    height: calc(100vh - 250rpx);
}

.right_menu_head {
    height: 88rpx;
    line-height: 88rpx;
}

.menu-list {
    display: flex;
    padding-bottom: 20rpx;
    position: relative;
}

.menu-info {
    padding-top: 20rpx;
    padding-left: 20rpx;
}

.menu-name {
    padding-bottom: 40rpx;
}

.menu-list image {
    width: 150rpx;
    height: 150rpx;
    border-radius: 10rpx;
}

.kongbai {
    height: 400rpx;
}

.add {
    width: 40rpx;
    height: 40rpx;
    line-height: 35rpx;
    text-align: center;
    position: absolute;
    right: 40rpx;
    bottom: 40rpx;
    color: #E1251B;
    font-size: 40rpx;
}

.shop-info {
    position: absolute;
    display: flex;
    width: 120rpx;
    height: 40rpx;
    right: 40rpx;
    bottom: 40rpx;
    padding-top: 10rpx;
}

.shop-info .iconfont {
    width: 40rpx;
    height: 40rpx;
    color: #E1251B;
}

/* 增加减少 */
.add-input {
    width: 100rpx;
    text-align: center;
    font-size: 20rpx;
    min-height: 10rpx;
    line-height: 50rpx;
    color: #a8a8a8;
}

.add-input {
    height: 30rpx;
    border-radius: 15rpx;
}

/* --------------------- */
.footorder {
    width: calc(100vw - 60rpx);
    position: absolute;
    bottom: 30rpx;
    left: 30rpx;
    height: 120rpx;
    display: flex;
    background-color: white;
    align-items: center;
    border-radius: 10rpx;
    box-shadow: 0px 0px 5px rgba(100, 100, 100, .5);
}

.shopping-Cart {
    font-size: 60rpx;
    padding-left: 40rpx;
    color: black;
}

.shuliang {
    position: absolute;
    background-color: #E1251B;
    color: white;
    font-size: 25rpx;
    text-align: center;
    line-height: 30rpx;
    width: 30rpx;
    height: 30rpx;
    border-radius: 50%;
    left: 80rpx;
    top: 24rpx
}

.all-price {
    color: #C6C6C6;
    padding-left: 40rpx;
    font-size: 40rpx;
}

.all-price-ing {
    color: #E1251B;
}

.settlement {
    width: 130rpx;
    text-align: center;
    height: 70rpx;
    line-height: 70rpx;
    margin-right: 20rpx;
    border-radius: 70rpx;
    /* background-color: #E1251B; */
    background-color: #999999;
    color: white;
    position: absolute;
    right: 20rpx;
}

.settlement_cart {
    background-color: #E1251B;
}