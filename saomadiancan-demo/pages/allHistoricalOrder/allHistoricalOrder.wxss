page {
  background-color: #F5F5F5;
}

.orders-list {
  display: flex;
  flex-direction: column;
  margin: 30rpx;
  width: calc(100vw - 60rpx);
  height: 400rpx;
  background-color: #FFFFFF;
  border-radius: 20rpx;
  box-shadow: 0px 0px 5px rgba(100, 100, 100, .5);

}

.header {
  display: flex;
  flex-direction: column;
  padding: 20rpx;
}

.title {
  display: flex;
  justify-content: space-between;
  align-items: center;
}

.name {
  font-size: 40rpx;
}

.state {
  align-self: flex-end;
  color: #8E8E8E;
}

.info {
  display: flex;
  margin-top: 20rpx;
}

.zhouzi-number {
  margin-right: 50rpx;
}

.content {
  padding: 20rpx;
  display: flex;
}

.shopping-image image {


  width: 100rpx;
  height: 100rpx;
  border-radius: 20rpx;
}

.shopping-content {
  display: flex;
  flex-direction: column;
  margin-left: 20rpx;
  width: 440rpx;
}

.shopping-ninfo {
  display: flex;
  margin-bottom: 20rpx;
}

.shopping-name {
  font-size: 28rpx;
  font-weight: 500;
}

.shopping-num {
  padding-left: 20rpx;
  font-size: 24rpx;
  align-self: center;
}

.shopping-time {
  font-size: 20rpx;
  color: #8E8E8E;
}

.shopping-price {
  align-self: center;
}

.agein-shopping {
  align-self: flex-end;
  margin-right: 40rpx;
  border: 1rpx solid #8E8E8E;
  padding: 20rpx;
  border-radius: 20rpx;
}